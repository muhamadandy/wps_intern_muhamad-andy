{
    "plugins": ["prettier-plugin-blade"],
    "overrides": [
        {
            "files": "**/*.blade.php",
            "options": {
                "parser": "blade",
                "printWidth": 120,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": false,
                "semi": false,
                "bladeBracketSameLine": true,
                "bladeSingleQuote": false,
                "wrapAttributes": "auto",
                "endOfLine": "lf"
            }
        }
    ]
}
